<div>
<%= @list.name %>
</div>
<div>
<% @list.bookmarks.each do |bookmark| %>
    <li class="list-group-item"><%= bookmark.comment %> - <%= bookmark.movie.title %> - <%= link_to "Remove",
                  bookmark_path(bookmark),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %></li>
  <% end %>
</div>
<div>
<%= link_to "My lists", lists_path, class: "btn btn-primary" %>
<%= link_to "Add a bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>
</div>